* {
	padding: 0;
	margin: 0;
	position: relative;
}
.wrapper {
	height: 100vh;
	width: 100vw;
}
.row {
	width: 100%;
	float: left;
}
.col {
	height: 100%;
	float: left;
}
.fill {
	width: 100%;
	height: 100%;
}

.text {
	width: 100%;
	height: 100%;
	float: none;
}

.center {
	display: flex;
	justify-content: center;
	align-items: center;
}

.scrolling {
	position: absolute;
	top: 50%;
	transform: translateY(-50%);
  max-width: 100%;
  overflow: hidden;
}

.marquee {
  white-space: nowrap;
  overflow: hidden;
  display: inline-block;
  animation: marquee 10s linear infinite;
}

.marquee p {
  display: inline-block;
}

@keyframes marquee {
  0% {
    transform: translate(0, 0);
  }
  100% {
    transform: translate(-50%, 0);
  }
}

.mySlides {display: none;}
img {vertical-align: middle;}

.slideshow-container {
  position: relative;
  margin: auto;
}

.fade {
  animation-name: fade;
  animation-duration: 1.5s;
}

@keyframes fade {
  from {opacity: .4} 
  to {opacity: 1}
}